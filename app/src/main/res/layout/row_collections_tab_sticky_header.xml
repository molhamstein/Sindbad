<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_dark"
              android:gravity="right"
              android:paddingRight="16dp"
              android:paddingLeft="20dp"
              android:paddingTop="14dp"
              android:paddingBottom="10dp"
              android:orientation="horizontal">


    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/btnSeeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|bottom"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/main_collection_list_see_more"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/ts_text_xsmall"
        app:fontId="1" />


    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/txt_of_black"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1" />

</LinearLayout>