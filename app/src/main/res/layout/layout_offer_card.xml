<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/selector_card_extruded_bg">


    <com.leenita.sindbad.view.RoundedImageView
        android:id="@+id/ivOffer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/tvName"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:corner_radius="5dp"/>

    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/place_holder"
        android:textColor="@color/txt_gray_light"
        android:textSize="@dimen/ts_text_small"
        app:fontId="1"/>

    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_above="@id/tvBrand"
        android:gravity="center"
        android:lines="1"
        android:maxLines="2"
        android:text="@string/place_holder"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvPrice"
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/ivOffer"
        android:layout_marginBottom="-15dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:background="@drawable/shape_offer_price_badge"
        android:gravity="center"
        android:text="25"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="2"/>


</RelativeLayout>


