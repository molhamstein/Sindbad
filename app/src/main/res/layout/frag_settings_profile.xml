<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:id="@+id/vContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg">


        <com.leenita.sindbad.view.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stickyheader"
            android:text="@string/settings_main_account_title"
            android:padding="14dp"
            android:textColor="@color/txt_gray_light"
            android:textSize="@dimen/ts_text_xsmall"
            android:gravity="right"
            app:fontId="1"/>

        <com.leenita.sindbad.view.EditTextCustomFont
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:lines="1"
            android:drawableRight="@drawable/ic_email"
            android:background="@android:color/white"
            android:textColor="@color/txt_gray"
            android:textColorHint="@color/txt_gray_light"
            android:drawablePadding="18dp"
            android:textSize="@dimen/ts_text_small"
            android:hint="@string/settings_profile_email_hint"
            app:fontId="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginRight="45dp"
            android:background="@color/separetor"/>

        <com.leenita.sindbad.view.EditTextCustomFont
            android:id="@+id/etJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:lines="1"
            android:drawableRight="@drawable/ic_profile_desc_rtl"
            android:textColor="@color/txt_gray"
            android:textColorHint="@color/txt_gray_light"
            android:background="@android:color/white"
            android:drawablePadding="18dp"
            android:textSize="@dimen/ts_text_small"
            android:hint="@string/settings_profile_job_hint"
            app:fontId="1"/>

        <com.leenita.sindbad.view.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stickyheader"
            android:text="@string/settings_profile_notifications_subtitle"
            android:padding="14dp"
            android:textColor="@color/txt_gray_light"
            android:textSize="@dimen/ts_text_xsmall"
            android:gravity="right"
            app:fontId="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbMentions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/ts_text_small"
                android:layout_marginLeft="5dp"
                android:gravity="right"/>

            <com.leenita.sindbad.view.TextViewCustomFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="@string/settings_profile_notifications_mentions"
                android:textColor="@color/txt_gray"
                android:layout_marginRight="12dp"
                android:textSize="@dimen/ts_text_xsmall"
                android:gravity="right"
                app:fontId="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/separetor"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbNewApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/ts_text_small"
                android:layout_marginLeft="5dp"
                android:gravity="right"/>

            <com.leenita.sindbad.view.TextViewCustomFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="@string/settings_profile_notifications_new_apps"
                android:textColor="@color/txt_gray"
                android:layout_marginRight="12dp"
                android:textSize="@dimen/ts_text_xsmall"
                android:gravity="right"
                app:fontId="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/separetor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbUpvotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@color/txt_gray"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/ts_text_small"
                android:gravity="right"/>

            <com.leenita.sindbad.view.TextViewCustomFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="@string/settings_profile_notifications_upvotes"
                android:textColor="@color/txt_gray"
                android:layout_marginRight="12dp"
                android:textSize="@dimen/ts_text_xsmall"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                app:fontId="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/separetor"/>

    </LinearLayout>
</ScrollView>