<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">


    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ivUser"
        android:layout_toRightOf="@+id/tvDate"
        android:layout_alignTop="@+id/ivUser"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-2dp"
        android:ellipsize="marquee"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/place_holder"
        android:textColor="@android:color/black"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:ellipsize="marquee"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/place_holder"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/ts_text_xsmall"
        app:fontId="1"/>

    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/ivUser"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/tvName"
        android:gravity="right|center_vertical"
        android:text="@string/place_holder"
        android:textColor="@color/app_theme"
        android:textSize="@dimen/ts_text_xsmall"
        app:fontId="1"/>

    <com.leenita.sindbad.view.TextViewCustomFont
        android:id="@+id/tvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/ivUser"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/tvDesc"
        android:gravity="right|center_vertical"
        android:text="@string/place_holder"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/ts_text_small"
        app:fontId="1"/>


    <com.leenita.sindbad.view.MLRoundedImageView
        android:id="@+id/ivUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_voteup_dark"/>

</RelativeLayout>


