<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card"
    android:gravity="center_vertical">

    <com.leenita.sindbad.view.RoundedImageView
        android:id="@+id/ivMedia"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10.4dp"
        android:layout_marginLeft="10.7dp"
        android:layout_marginRight="11.3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cover_temp"
        app:corner_radius="4dp"/>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--android:background="@drawable/shape_rounded_media_element_overlay"/>-->

    <ImageView
        android:id="@+id/ivPLayIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_play"/>

</FrameLayout>


