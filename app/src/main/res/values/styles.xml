<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimaryDark">@color/app_theme_dark</item>
        <item name="colorPrimary">@color/app_theme</item>
        <item name="colorAccent">@color/app_theme</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/txt_gray_xlight</item>

        <!--actionBar-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="logo">@drawable/res_actionbar_logo</item>
    </style>

    <style name="MyActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="background">@drawable/bg_actionbar</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="MyActionBarTitleText" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!--Compat lib-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/app_theme_dark</item>
        <item name="colorPrimary">@color/app_theme</item>
        <item name="colorAccent">@color/app_theme</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/txt_gray_xlight</item>
    </style>

    <style name="expandable_title_apperance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/ts_text_big</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="collapced_titile_appreance" parent="@android:style/TextAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogFadeAnim" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowAnimationStyle">@style/DialogAnimationFade</item>
    </style>

    <style name="DialogAnimationFade">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="PlatformBadge">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">29dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

</resources>