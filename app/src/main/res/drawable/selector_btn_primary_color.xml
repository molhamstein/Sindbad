<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <nine-patch android:src="@drawable/res_shadow_rounded"/>
            </item>
            <item
                android:bottom="8dp"
                android:left="6dp"
                android:right="6dp"
                android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/app_theme"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <!--<nine-patch android:src="@drawable/res_shadow_rounded"/>-->
                <shape android:shape="rectangle">
                    <gradient android:endColor="#00000000"
                              android:gradientRadius="10dp"
                              android:startColor="@color/black"
                              android:type="radial"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/app_theme2"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>